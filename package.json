{
  "name": "mmm-remote-control",
  "version": "3.3.0",
  "description": "This module for the MagicMirrorÂ² allows you to shutdown and configure your mirror through a web browser.",
  "keywords": [
    "magic mirror",
    "smart mirror",
    "module",
    "remote control",
    "control"
  ],
  "homepage": "https://github.com/jopyth/MMM-Remote-Control#readme",
  "bugs": {
    "url": "git+https://github.com/jopyth/MMM-Remote-Control/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jopyth/MMM-Remote-Control"
  },
  "license": "MIT",
  "author": "Joseph Bethge",
  "contributors": [
    "https://github.com/jopyth/MMM-Remote-Control/graphs/contributors"
  ],
  "type": "commonjs",
  "scripts": {
    "download_modules": "node ./scripts/download_modules_manually.mjs",
    "lint": "eslint && prettier . --check",
    "lint:fix": "eslint --fix && prettier . --write",
    "prepare": "simple-git-hooks || echo 'No problem. Skipping git hooks installation.'",
    "postinstall": "node scripts/postinstall.js",
    "test": "node --run lint && node --run test:spelling && node --run test:unit",
    "test:coverage": "c8 --all node --test tests/unit/**/*.test.js",
    "test:spelling": "cspell .",
    "test:unit": "node --test tests/unit/**/*.test.js"
  },
  "dependencies": {
    "showdown": "^2.1.0",
    "simple-git": "^3.30.0",
    "swagger-ui-dist": "^5.30.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@eslint/markdown": "^7.5.1",
    "@stylistic/eslint-plugin": "^5.5.0",
    "c8": "^10.1.3",
    "cspell": "^9.3.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import-x": "^4.16.1",
    "globals": "^16.5.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": [
      "eslint --fix",
      "prettier --write --ignore-unknown"
    ]
  },
  "c8": {
    "reporter": [
      "text-summary",
      "lcov"
    ],
    "include": [
      "lib/**/*.js",
      "API/**/*.js",
      "node_helper.js",
      "MMM-Remote-Control.js"
    ],
    "exclude": [
      "tests/**",
      "translations/**",
      "docs/**",
      "img/**",
      "remote.html",
      "remote.js",
      "remote.css",
      "**/*.md"
    ],
    "check-coverage": true,
    "branches": 5,
    "lines": 5,
    "functions": 4,
    "statements": 5
  }
}
